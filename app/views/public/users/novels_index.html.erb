<div class="container mt-2">
  <div class="row d-flex justify-content-center">
    <div class="col-8">
      <h3 class="mt-3"><%= @user.name %> 様の投稿</h3>

      <% @novels.each do |novel| %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= link_to novel.title, novel_path(novel) %></h5>
          <p class="card-text"><%= link_to @user.name, user_path(@user) %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>