<div class="container mt-2">
  <div class="row d-flex justify-content-center">
    <div class="col-8">
      <div class="mt-5">
        <%= form_with(model:[@novel, @comment], local: false) do |f| %>
          <%= f.text_area :comment, rows:'3',placeholder: "コメントを入力してください", class: "w-100 comment-textarea" %>
          <div class="btn-toolbar">
            <div class="btn-group">
              <%= link_to :back, class: 'text-light' do %>
                <button class="btn btn-danger" type="submit">キャンセル</button>
              <% end %>
            </div>
            <div class="btn-group ml-auto">
              <%= f.submit "変更内容を保存", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>