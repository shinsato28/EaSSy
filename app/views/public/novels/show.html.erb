<div class="container mt-2">
  <div class="row d-flex justify-content-center mb-5">
    <div class="col-10">
      <%= form_with model: @novel do |f| %>
        <h2 class="mb-2"><%= @novel.title %></h2>
        <div class="mb-3 border-bottom">
          <% @novel.tags.each do |tag| %>
            <span><%= tag.name %> </span>
          <% end %>
        </div>
        <div class="contents-area mb-5"><%=safe_join(@novel.body.split("\n"),tag(:br))%></div>

        <div class="btn-toolbar">
          <div class="btn-group">
            <% if admin_signed_in? %>
              <%= link_to novels_index_admin_user_path(@novel.user), class: 'text-light' do %>
                <button class="btn btn-success" type="submit">もっと<%= @novel.user.name %>の投稿を見る</button>
              <% end %>
            <% else %>
              <%= link_to novels_index_user_path(@novel.user), class: 'text-light' do %>
                <button class="btn btn-success" type="submit">もっと<%= @novel.user.name %>の投稿を見る</button>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>