<div class="container mt-2">
  <div class="row d-flex justify-content-center">
    <div class="col-8">
      <h3 class="mt-3 mb-3 border-bottom"><%= link_to @novel.title, novel_path(@novel) %></h3>

      <!--すべてのコメントを削除できる-->
      <% @comments.each do |comment| %>
        <div class="card mb-1">
          <div class="card-body">
            <p class="card-title">
              <%= link_to comment.user.name, user_path(comment.user) %>
              <span class="ml-5">投稿日: <%= l comment.created_at %></span>
            </p>
            <p class="card-text"><%= comment.comment %></p>
              <div class="text-right">
                <%= link_to "削除", admin_novel_novel_comment_path(@novel, comment), method: :delete, class: "btn btn-danger", data: { confirm: 'コメントを削除しますか？' } %>
              </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>