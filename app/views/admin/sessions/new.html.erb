<div class="container">
  <div class="text-center mt-5"><h5><strong><%= flash[:notice] %></strong></h5></div>
    <div class="row d-flex justify-content-center m-5">
      <div class="col-7">
        <div class="border border-secondary-subtle contents-area">
          <div class="bd-light p-2 text-secondary text-center">
            <h1>管理者ログイン</h1>
          </div>

          <div class="m-5">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="d-flex justify-content-start mb-3">
                <%= f.label :メールアドレス, class: "w-25 mr-1" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-50", placeholder: "メールアドレスを入力してください" %>
              </div>

              <div class="d-flex justify-content-start mb-3">
                <%= f.label :パスワード, class: "w-25 mr-1" %>
                <%= f.password_field :password, autocomplete: "current-password", class: "w-50" %>
              </div>

              <div class="actions text-center">
                <%= f.submit "ログイン", class: "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
