<div class="container mt-2">
  <div class="row d-flex justify-content-center">
    <div class="col-8 mb-5">
      <!--ユーザー検索を選択した場合-->
      <% if @model == 'user' %>
        <h3 class="mb-3">ユーザー名: "<%= @content %>" の検索結果</h3>
        <%= render 'public/searches/search_form' %>
        <%= render 'admin/searches/user_search', records: @records %>
      <!--小説の検索を選択した場合-->
      <% else %>
      	<h3 class="mb-3">検索ワード: "<%= @content %>" の検索結果</h3>
      	<%= render 'public/searches/search_form' %>
        <%= render 'admin/users/novels_index', novels: @records %>
      <% end %>
    </div>
  </div>
</div>

<%= paginate @records %>

